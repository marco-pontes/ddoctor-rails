<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <g:set var="entityName" value="${message(code: 'atendimento.label', default: 'Atendimento')}" />
        <title><%= t :default_show_label %></title>
    </head>
    <body>
    
    	<div id="sub-nav">
    		<%= breadcrumb(t(:consultation_show_title), true) %>
		</div>
		<div id="page-layout">
			<div id="page-content">
				<div id="page-content-wrapper">
					<div class="inner-page-title">
	          			<h2><%= t :atendimento_show_welcome_message %></h2>
						<span><%= t :atendimento_show_welcome_hint %></span>
					</div>
					<div class="clear"></div>
					<div class="content-box">
			            <% if flash[:mensagem] -%>
			            	<div class="response-msg <%= flash[:mensagem][:tipo] %> ui-corner-all">
			            		<% if flash[:mensagem][:tipo] == "info" -%>
									<span> <%= t :info_box_label %></span>
								<% end -%>
								<% if flash[:mensagem][:tipo] == "success"-%>
									<span> <%= t :success_box_label %></span>
								<% end -%>
								<% if flash[:mensagem][:tipo] == "error" -%>
									<span> <%= t :error_box_label %></span>
								<% end -%>
								<%= flash[:mensagem][:texto] %>
							</div>
						<% end -%>
						<div class="other-box gray-box ui-corner-all">
							<div class="cont ui-corner-all">
								<h2>
									<%= t :atendimento_status_label %>
									<%= @atendimento.status %>
								</h2>
								<br/>
								<div class="paciente">
									<h2><%= t :pacient_section_title %></h2>
									<div class="foto">
										<%= image_tag("no_picture.png")%>
									</div>
									<div class="dados">
										<%= link_to paciente_path(@atendimento.consulta.paciente.id) do %>
											<h3><%= @atendimento.consulta.paciente.nome %></h3>
										<% end %>
										<div style="padding: 20px 10px;">
											<%= t :paciente_telefone_label %>
											<%= @atendimento.consulta.paciente.telefone %> <br/>
											<%= t :paciente_email_label %>
											<%= @atendimento.consulta.paciente.email %><br/>
										</div>
									</div>
								</div>
								<div class="medico">
									<h2><%  t :doctor_section_title %> </h2>
									<div class="foto">
										<%= image_tag("no_picture_doctor2.png")%>
									</div>
									<div class="dados">
										<%= link_to medico_path(@atendimento.consulta.medico.id) do %>
											<h3><%= @atendimento.consulta.medico.nome %></h3>
										<% end %>
										<div style="padding: 20px 10px;">
											<%= t :paciente_telefone_label %>
											<%= @atendimento.consulta.medico.telefone %> <br/>
											<%= t :paciente_email_label %>
											<%= @atendimento.consulta.medico.email %><br/>
										</div>
									</div>
									<div style="float:left;width:20%;padding: 20px 10px;">
									</div>
								</div>
								<div class="clearfix"></div>
							</div>
						</div>
						<div class="other-box yellow-box ui-corner-all">  
							<div class="cont ui-corner-all">
								<h3><%= t :consultation_date_info %> </h3>
								<%= t :consultation_status_label %>
									<%= @atendimento.consulta.status %> <br/>
								<b>
									<%= t :consultation_date_label %>
										<%= l @atendimento.consulta.data, :format=>:short %>
								</b>
								<br/>
								<b>
									<%= t :atendimento_date_label %>
									<% if @atendimento.data != nil %>
										<%= l @atendimento.data, :format=>:short %>
									<% end %>
								</b>
							</div>
						</div>
        			</div>
        			<%= render :partial => 'templates/sidebar' %>
        		</div>
        	</div>
        </div>
    </body>
</html>
